<div class="modal-body no-p">
  <div class="row">
    <div class="col-xs-12">
      <section class="panel panel-primary no-b">
        <header class="panel-heading clearfix brtl brtr">
          <div class="overflow-hidden">
            <a href="javascript:;" class="h4 show no-m pt5">订单详情</a>
          </div>
        </header>
        <div class="list-group" style="text-align: center;padding-top: 10px;">
          <table width="100%" style="padding: 10px;">
            <tr style="height: 30px;">
              <td width="20%" align="right">订单号：</td>
              <td width="30%" align="left">
                <%=obj.id%>
              </td>
              <td width="20%" align="right">订单总额：</td>
              <td width="30%" align="left">
                &yen;<%=StringUtil.setPrice(obj.finishAmount)||'0.00'%>
              </td>
            </tr>

            <tr style="height: 30px;">
              <td width="20%" align="right">运费：</td>
              <td width="30%" align="left">
                  &yen;<%=StringUtil.setPrice(obj.freightAmount)||'0.00'%>
              </td>
              <td width="20%" align="right">折扣：</td>
              <td width="30%" align="left">
                &yen;<%=StringUtil.setPrice(obj.discountAmount)||'0.00'%>
              </td>
            </tr>
            <tr style="height: 30px;">
              <td width="20%" align="right">发货状态：</td>
              <td width="30%" align="left">
                <%
                var shipStatus ='未发货';
                if (obj.shipStatus == 1){
                  shipStatus = '已发货';
                }
                %>
                <%=shipStatus%>
              </td>
              <td width="20%" align="right">发货单号：</td>
              <td width="30%" align="left">

                <%if(obj.shiptypeNo){%>
                  <span style="float: left;margin-right: 5px;">
                    <%=obj.shiptypeNo %>
                  </span>
                  <%if(obj.shipStatus&&obj.shiptypeId>=0){%>

                  <span style="float: left;margin-right: 20px;">
                    <a href="http://www.kuaidi100.com/?from=openv" target="_blank" style="color: #1582DC;">[查询]</a>
                  </span>

                <%}}%>
              </td>
            </tr>
            <%
            var paytype = {
              'pay_wxpay':'微信',
              'pay_alipay':'支付宝',
              'pay_money':'预存款',
              'pay_cash':'货到付款'
            };

            var paystatus = ['未付款','已付款','申请退款','已退款'];
            %>
            <tr style="height: 30px;">
              <td width="20%" align="right">支付方式：</td>
              <td width="30%" align="left">
                  <%=paytype[obj.payType]%>
              </td>
              <td width="20%" align="right">支付状态：</td>
              <td width="30%" align="left">
                <%=paystatus[obj.payStatus]%>
              </td>
            </tr>
            <tr style="height:25px;border-top:1px solid #ddd">
              <td width="100%" align="center" colspan="4" style="font-weight:bold;background:#ccc;color:#fff">会员信息</td>
            </tr>
            <tr style="height: 30px" style="border:2px solid #1582DC">
              <td width="20%" align="right">会员昵称：</td>
              <td width="30%" align="left">
                <%var nickname = obj.memberId?obj.memberId.nickname?obj.memberId.nickname:'':'' %>
                <%-nickname%></td>
              <td width="20%" align="right">手机号码：</td>
              <td width="30%" align="left">
                <%var mobile = obj.memberId?obj.memberId.mobile?obj.memberId.mobile:'':''%>
                <%= mobile %>
              </td>
            </tr>
            <tr style="height:25px;border-top:1px solid #ddd">
              <td width="100%" align="center" colspan="4" style="font-weight:bold;background:#ccc;color:#fff">收货人信息</td>
            </tr>
            <tr style="height: 30px;">
              <td width="20%" align="right">收货人：</td>
              <td width="30%" align="left"><%= obj.addrName%></td>
              <td width="20%" align="right">联系电话：</td>
              <td width="30%" align="left"><%=obj.addrMobile||'0'%></td>
            </tr>
            <tr style="height: 30px;">
              <td width="20%" align="right">收货地址：</td>
              <td width="80%" align="left" colspan="3">
                <%-obj.addrProvince+obj.addrCity+obj.addrArea+obj.addrAddr%>
              </td>
            </tr>
          </table>
          <%if (obj.taxType>0){%>
          <hr />
          <table width="100%" style="padding: 10px;">
            <tr style="height:25px;">
              <td width="100%" align="center" colspan="5" style="font-weight:bold;background:#ccc;color:#fff">发票信息</td>
            </tr>
            <tr style="height: 30px;">
              <td width="20%" align="right">发票类型：</td>
              <td width="30%" align="left">
                <%if (obj.taxType==1){%>
                  企业发票
                <%}else{%>
                  个人发票
                <%}%>
              </td>
              <td width="20%" align="right">税号：</td>
              <td width="30%" align="left">
                <%=obj.taxNo%>
              </td>
            </tr>
            <tr style="height: 30px;">
              <td width="20%" align="right">发票抬头：</td>
              <td width="30%" align="left">
                  <%=obj.taxTitle%>
              </td>
              <td width="20%" align="right">发票内容：</td>
              <td width="30%" align="left">
                  <%=obj.taxCentent%>
              </td>
            </tr>
          </table>
            <%}%>
          <hr />
          <table width="100%" >
            <thead>
              <tr style="height:25px;">
                <td width="100%" align="center" colspan="5" style="font-weight:bold;background:#ccc;color:#fff">商品信息</td>
              </tr>
              <tr>
                <td width="40%" align="center" >商品名称</td>
                <td width="25%" align="left">规格</td>
                <td width="5%" align="right">数量</td>
                <td width="15%" align="right">单价</td>
                <td width="15%" align="center">小计</td>
              </tr>
            </thead>
            <tbody>
              <%if(obj.goods){obj.goods.forEach(function(o){%>
                <tr>
                  <td width="40%" align="center" ><%=o.name||''%></td>
                  <td width="25%" align="left"><%=o.spec||'-'%></td>
                  <td width="5%" align="right"><%=o.num||''%></td>
                  <td width="15%" align="right">&yen;<%=StringUtil.setPrice(o.price)||'0.00'%></td>
                  <td width="15%" align="center">&yen;<%=StringUtil.setPrice(o.amount)||'0.00'%></td>
                </tr>
              <%});}%>
            </tbody>
          </table>
        </div>
      </section>

    </div>
  </div>
</div>
<div class="modal-footer">
  <button type="button" class="btn btn-primary btn-block" data-dismiss="modal">知道了</button>
</div>

<div class="modal-body no-p">
  <div class="row">
    <div class="col-xs-12">
      <section class="panel panel-primary no-b">
        <header class="panel-heading clearfix brtl brtr">
          <div class="overflow-hidden">
            <a href="javascript:;" class="h4 show no-m pt5">赠送优惠券</a>
          </div>
        </header>
        <div class="row mb10" style="text-align: center;padding-top: 10px;">
          <table width="80%" style="padding: 10px;">
            <tr style="height: 30px;">
              <td width="30%" align="right">选择优惠券：</td>
              <td width="70%" align="left">
                <select class="form-control" name="couponId" id="couponId">
                  <option value="0">无</option>
                  <%couponList.forEach(function(o){
                  if(o.maxNum> o.hasNum){
                  %>
                  <option value="<%=o.id%>"><%=o.name%>(&yen;<%=StringUtil.setPrice(o.price)||'0.00'%>)</option>
                  <%}});%>
                </select>
              </td>
            </tr>
            <tr style="height: 40px;">
              <td width="30%" align="right">尚未使用的优惠券：</td>
              <td width="70%" align="left">
                  <%if(list.length>0){list.forEach(function(o){
                  %>
                <%=o.couponName||''%>(&yen;<%=StringUtil.setPrice(o.couponPrice)||'0.00'%>)<br>
                  <%});}else{%>
                无
                <%}%>
              </td>
            </tr>
          </table>
        </div>
      </section>

    </div>
  </div>
</div>
<div class="modal-footer">
  <button type="button" class="btn btn-default" data-dismiss="modal">取 消</button>
  <button onclick="doScore()" id="ok" type="button" class="btn btn-primary" data-loading-text="正在提交...">确 定</button>
</div>
<script type="text/javascript">
  function doScore(){
      var btn = $("#ok");
      var dialog = $("#dialogDetail");
      btn.button("loading");
      $.post("/private/shop/member/member/doCoupon", {id: <%=id%>,couponId:$("#couponId").val()}, function (data) {
        if (data.code == 0) {
          Toast.success("提交成功");
          dialog.modal("hide");
          datatable.ajax.reload();
        } else {
          Toast.error(data.msg);
        }
        btn.button("reset");

      }, "json");
  }
</script>

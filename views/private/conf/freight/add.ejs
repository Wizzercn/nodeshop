<header class="header navbar bg-white shadow">
  <div class="btn-group tool-button">
    <a class="btn btn-primary navbar-btn" href="/private/conf/freight/add" data-pjax><i class="ti-angle-left"></i> 返回</a>
  </div>
</header>

<div class="content-wrap">
  <div class="wrapper" style="min-height:500px;">
    <section class="panel panel-form">
      <div id="app">
      <div id="addForm" class="form-horizontal parsley-form">
        <div class="row mb10">
          <div class="col-lg-12">
            <div class="form-group">
              <label for="login_name" class="col-sm-2 control-label">模版名称</label>
              <div class="col-sm-8">
                <input type="ferightname" id="ferightname" class="form-control" name="bn" v-model="ferightname" data-parsley-required="true" placeholder="模版名称">
              </div>
            </div>
            
              <div class="form-group">
                <label class="col-sm-2 control-label">计价方式</label>
                <div class="col-sm-8" style="padding-top: 5px;">
                  <!--<input type="radio" name="list_quick_buy" value="1" checked="" data-parsley-multiple="list_quick_buy">按件数
                  <input type="radio" name="list_quick_buy" value="0" data-parsley-multiple="list_quick_buy">按重量-->
                  <input type="radio" id="weight" value="weight" v-model="ferighttype">
                  <label for="weight">重量</label>
                  <input type="radio" id="cubage" value="cubage" v-model="ferighttype">
                  <label for="cubage">体积</label>
                  <input type="radio" id="quantity" value="quantity" v-model="ferighttype">
                  <label for="quantity">数量</label>
                  <!--<span>Picked: {{ ferighttype }}</span>-->
                </div>

              </div>
              <div class="form-group">
                <span>data json: {{ ferightname | json }}</span><br />
                <span>data json: {{ ferighttype | json }}</span><br />
                <span>data json: {{ freightlist | json }}</span>
              </div>
              <div class="form-group">
                <label class="col-sm-2 control-label">运费设置</label>
                <!--<button id="btnAdd" type="button" class="btn btn-default"><i class="fa fa-plus mr5"></i>添加城市模板</button>-->
                <div class="col-sm-8" id="freightModel">

                  <!--vue-start-->

                  <button v-on:click="addFreight" type="button" class="btn btn-default"><i class="fa fa-plus mr5"></i>添加城市</button>

                  <div class="city-freight" v-for="v in freightlist">
                    <div>
                      <span v-for="c in v.city">{{c.name}}  </span>
                      <a href="#" data-toggle="modal" v data-target="#dialogCity" onClick="setIndex({{$index}})">[选择城市]</a>
                    </div>
                    <span>首计</span>
                    <input type="text" v-model="v.price.firstunit" placeholder="edit me">
                    <span>运费</span>
                    <input type="text" v-model="v.price.continueunit" placeholder="edit me">
                    <span>续计</span>
                    <input type="text" v-model="v.price.firstprice" placeholder="edit me">
                    <span>运费</span>
                    <input type="text" v-model="v.price.continueprice" placeholder="edit me">
                    <i class="del fa fa-remove" style="cursor:pointer" v-on:click="addFreight"></i>
                  </div>
                </div>
                <!--vue-end-->

                <script>
                  var num = 0;
                  var vmdata = {
                    ferightname:'',
                    ferighttype: '',
                    freightlist: []
                  }
                  var vm = new Vue({
                    el: '#app',
                    data: vmdata,
                    methods: {
                      addFreight: function() {
                        vmdata.freightlist.push({
                          city: {},
                          price: {
                            firstunit: 0,
                            continueunit: 0,
                            firstprice: 0,
                            continueprice: 0
                          }
                        });
                      }
                    }
                  });

                  function setIndex(indexNum) {
                    num = indexNum;
                    console.log(num);
                  }
                </script>



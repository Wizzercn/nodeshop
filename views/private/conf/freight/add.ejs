<header class="header navbar bg-white shadow">
  <div class="btn-group tool-button">
    <a class="btn btn-primary navbar-btn" href="/private/conf/freight/add" data-pjax><i class="ti-angle-left"></i> 返回</a>
  </div>
</header>

<div class="content-wrap">
  <div class="wrapper" style="min-height:500px;">
    <section class="panel panel-form">
      <form id="addForm" role="form" class="form-horizontal parsley-form" data-parsley-validate action="/private/shop/logistics/addDo"
        method="post">
        <div class="row mb10">
          <div class="col-lg-12">
            <div class="form-group">
              <label for="login_name" class="col-sm-2 control-label">模版名称</label>
              <div class="col-sm-8">
                <input type="text" id="bn" class="form-control" name="bn" data-parsley-required="true" placeholder="模版名称">
              </div>
            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label">计价方式</label>
              <div class="col-sm-8" style="padding-top: 5px;">
                <input type="radio" name="list_quick_buy" value="1" checked="" data-parsley-multiple="list_quick_buy">按件数
                <input type="radio" name="list_quick_buy" value="0" data-parsley-multiple="list_quick_buy">按重量
              </div>

            </div>
            <div class="form-group">
              <label class="col-sm-2 control-label">运费设置</label>

              <button id="btnAdd" type="button" class="btn btn-default"><i class="fa fa-plus mr5"></i>添加城市模板</button>
              <div class="col-sm-8" id="freightModel">
                <div id="app" >
                  <button v-on:click="addFreight" type="button" class="btn btn-default"><i class="fa fa-plus mr5"></i>添加城市</button>
                  <span>Checked names: {{ freightlist | json }}</span>
                  <div class="city-freight" v-for="v in freightlist">
                    <div class="">
                      <span> </span>
                      <span>{{v.lable}}</span>
                      <a href="#" data-toggle="modal" data-target="#dialogCity">[修改]</a>
                    </div>
                    <ul>
                      <li>
                        <span>首重</span>
                  <input type="text" name="name" value="">
                  <span>运费</span>
                  <input type="text" name="name" value="">
                  <span>续重</span>
                  <input type="text" name="name" value="">
                  <span>运费</span>
                  <input type="text" name="name" value="">
                      </li>
                    </ul>
                    <i class="del fa fa-remove" style="cursor:pointer" v-on:click="addFreight"></i>
                  </div>

                </div>


                <div class="city-freight">
                  <div class="">
                    <span>所属城市</span>
                    <span>全国</span>
                    <a href="#" data-toggle="modal" data-target="#dialogCity">[修改]</a>
                  </div>
                  <span>首重</span>
                  <input type="text" name="name" value="">
                  <span>运费</span>
                  <input type="text" name="name" value="">
                  <span>续重</span>
                  <input type="text" name="name" value="">
                  <span>运费</span>
                  <input type="text" name="name" value="">
                  <i class="del fa fa-remove" style="cursor:pointer;margin-left:10px;padding: 5px;" title="删除"></i>
                </div>

              </div>
            </div>
          </div>
        </div>
        <div class="col-lg-3"></div>
        <div class="col-lg-6">
          <div class="form-group text-center">
            <label></label>

            <div>

              <button class="btn btn-primary btn-block btn-lg btn-parsley" data-loading-text="正在提交...">提 交</button>
            </div>
          </div>
        </div>
      </form>
    </section>

  </div>
</div>
<div id="dialogCity" class="modal fade bs-modal-sm" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h4 class="modal-title">选择城市</h4>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-xs-12">
            <div id="jsTreeParentUnit" class="demo"></div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <div class="pull-left">
          <button type="button" class="btn btn-success" data-dismiss="modal" onclick="selectFirstMenu()">全选</button>
        </div>
        <button type="button" class="btn btn-default" data-dismiss="modal">取 消</button>
        <button type="button" class="btn btn-primary" onclick="complete()">确认选择</button>
      </div>
    </div>
  </div>
</div>

<script>
new Vue({
  el: '#app',
  data: {
    freightlist : [
      {
        lable: '首重',
        value: 200
      },
    ]
  },
  methods : {
    addFreight : function(){
      this.freightlist.push({
        lable: '续重',
        value: 200
      });
    }
  }
});
</script>
<script language="JavaScript">
  $(document).ready(function () {
    $('#addForm').ajaxForm({
      dataType: 'json',
      beforeSubmit: function (arr, form, options) {
        form.find("button:submit").button("loading");
      },
      success: function (data, statusText, xhr, form) {
        if (data.code == 0) {
          Toast.success(data.msg);
          //刷新父级菜单
          form.resetForm();
        } else {
          Toast.error(data.msg);
        }
        form.find("button:submit").button("reset");
      }
    });

    $('#btnAdd').on('click',function(e){
      var domStr = '<div class="city-freight"><div class=""><span>所属城市</span><span>全国</span><a href="#" data-toggle="modal" data-target="#dialogCity">[修改]</a></div>'+
                ' <span>首重</span> <input type="text" name="name" value=""> <span>运费</span> <input type="text" name="name" value="">'+
                ' <span>续重</span> <input type="text" name="name" value=""> <span>运费</span> <input type="text" name="name" value="">'+
                ' <i class="del fa fa-remove" style="cursor:pointer;margin-left:10px;padding: 5px;" title="删除"></i></div>';
      $('#freightModel').append(domStr);
      $('.fa-remove').off().on('click',function (e) {
        $(this).parent().remove();
      })
    });

    initTreeView();
  });
  function initTreeView() {
    $("#jsTreeParentUnit").jstree({
      plugins: ["json_data","checkbox"],
      core: {
        data: <%-JSON.stringify(menu)%>,
        // data: {
        //   dataType: "json",
        //   url: function (node) {
        //     return node.id === "#" ? "/private/shop/goods/class/tree" : "/private/shop/goods/class/tree?pid=" + node.id
        //   }
        // },
        multiple: true
      }
    }).on("dblclick.jstree", function (node) {
      selectParentMenu();
    });
  }
  function complete() {
    var tree = $.jstree.reference("#jsTreeParentUnit");
    var ids = tree.get_selected();
    //查询所选节点的所有父节点
    // for (var i = 0; i < ids.length; i++) {
    //   var node = ids[i];
    //   each(node, tree, ids);
    // }
    if (ids.length > 0) {
      $.post("/private/conf/freight/cityEdit", {ids: ids, fcId:'1'}, function (data) {
        Toast.error(data.msg);
        // if (data.code == 0) {
        //   Toast.success(data.msg);
        //   setTimeout(function () {
        //     $("#goback").trigger("click");
        //   }, 1000);
        // } else {
        //   Toast.error(data.msg);
        // }
      }, "json");
    } else {
      Toast.warning("请先选择菜单！");
    }
  }
  function each(node, tree, nodes) {
    var p = tree.get_parent(node);
    if (p.length > 1) {
      if (nodes&&p&&nodes.indexOf(p)<0)
        nodes.push(p);
      each(p, tree, nodes);
    }
  }

</script>
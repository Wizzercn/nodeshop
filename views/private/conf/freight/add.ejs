                  <div class="">
                    <span>所属城市</span>
                    <span>全国</span>
                    <a href="#" data-toggle="modal" data-target="#dialogCity">[修改]</a>
                  </div>
                  <span>首重</span>
                  <input type="text" v-model="v.price.firstunit" placeholder="edit me">
                  <span>运费</span>
                  <input type="text" v-model="v.price.firstunit" placeholder="edit me">
                  <span>续重</span>
                  <input type="text" v-model="v.price.firstunit" placeholder="edit me">
                  <span>运费</span>
                  <input type="text" v-model="v.price.firstunit" placeholder="edit me">
                  <i class="del fa fa-remove" style="cursor:pointer;margin-left:10px;padding: 5px;" title="删除"></i>
                </div>-->

              </div>
            </div>
          </div>
        </div>
        <div class="col-lg-3"></div>
        <div class="col-lg-6">
          <div class="form-group text-center">
            <label></label>
            <div>
              <button id="putferight" class="btn btn-primary btn-block btn-lg btn-parsley" data-loading-text="正在提交..." onClick="setferight()">提 交</button>
            </div>
          </div>
        </div>
      </div>
    </section>

  </div>
</div>
<div id="dialogCity" class="modal fade bs-modal-sm" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h4 class="modal-title">选择城市</h4>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-xs-12">
            <div id="jsTreeParentUnit" class="demo"></div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <div class="pull-left">
          <button type="button" class="btn btn-success" data-dismiss="modal" onclick="selectFirstMenu()">全选</button>
        </div>
        <button type="button" class="btn btn-default" data-dismiss="modal">取 消</button>
        <button type="button" class="btn btn-primary" onclick="getcity()">确认选择</button>
      </div>
    </div>
  </div>
</div>

<script language="JavaScript">
  $(document).ready(function() {
    $('#addForm').ajaxForm({
      dataType: 'json',
      beforeSubmit: function(arr, form, options) {
        form.find("button:submit").button("loading");
      },
      success: function(data, statusText, xhr, form) {
        if (data.code == 0) {
          Toast.success(data.msg);
          //刷新父级菜单
          form.resetForm();
        } else {
          Toast.error(data.msg);
        }
        form.find("button:submit").button("reset");
      }
    });

    $

    $('#btnAdd').on('click', function(e) {
      var domStr = '<div class="city-freight"><div class=""><span>所属城市</span><span>全国</span><a href="#" data-toggle="modal" data-target="#dialogCity">[修改]</a></div>' +
        ' <span>首重</span> <input type="text" v-model="v.price.firstunit" placeholder="edit me"> <span>运费</span> <input type="text" v-model="v.price.firstunit" placeholder="edit me">' +
        ' <span>续重</span> <input type="text" v-model="v.price.firstunit" placeholder="edit me"> <span>运费</span> <input type="text" v-model="v.price.firstunit" placeholder="edit me">' +
        ' <i class="del fa fa-remove" style="cursor:pointer;margin-left:10px;padding: 5px;" title="删除"></i></div>';
      $('#freightModel').append(domStr);
      $('.fa-remove').off().on('click', function(e) {
        $(this).parent().remove();
      })
    });

    initTreeView();
  });

  function initTreeView() {
    $("#jsTreeParentUnit").jstree({
      plugins: ["json_data", "checkbox"],
      core: {
        data: <%-JSON.stringify(menu)%>,
        // data: {
        //   dataType: "json",
        //   url: function (node) {
        //     return node.id === "#" ? "/private/shop/goods/class/tree" : "/private/shop/goods/class/tree?pid=" + node.id
        //   }
        // },
        multiple: true
      }
    }).on("dblclick.jstree", function(node) {
      selectParentMenu();
    });
  }

  function setferight() {
     $.post("/private/conf/freight/addDo", {
       vmdata
      }, function(data) {
        // Toast.error(data.msg);
        // console.log(vmdata.freightlist[num].city);

        if (data.code == 0) {
          Toast.success(data.msg);
          setTimeout(function() {
            vmdata.freightlist[num].city = data.city;
            $("#goback").trigger("click");
          }, 1000);
        } else {
          Toast.error(data.msg);
        }
        $("#dialogCity").modal("hide");
      }, "json");
  }

  function getcity() {
    var tree = $.jstree.reference("#jsTreeParentUnit");
    var ids = tree.get_selected();
    console.log(ids);
    console.log(num);
    if (ids.length > 0) {
      $.post("/private/conf/freight/cityEdit", {
        ids: ids,
        fcId: '1'
      }, function(data) {
        // Toast.error(data.msg);
        // console.log(vmdata.freightlist[num].city);

        if (data.code == 0) {
          Toast.success(data.msg);
          setTimeout(function() {
            vmdata.freightlist[num].city = data.city;
            $("#goback").trigger("click");
          }, 1000);
        } else {
          Toast.error(data.msg);
        }
        $("#dialogCity").modal("hide");
      }, "json");
    } else {
      Toast.warning("请先选择菜单！");
    }

  }

  function complete() {
    var tree = $.jstree.reference("#jsTreeParentUnit");
    var ids = tree.get_selected();
    //查询所选节点的所有父节点
    // for (var i = 0; i < ids.length; i++) {
    //   var node = ids[i];
    //   each(node, tree, ids);
    // }
    if (ids.length > 0) {
      $.post("/private/conf/freight/cityEdit", {
        ids: ids,
        fcId: '1'
      }, function(data) {
        Toast.error(data.msg);
        // if (data.code == 0) {
        //   Toast.success(data.msg);
        //   setTimeout(function () {
        //     $("#goback").trigger("click");
        //   }, 1000);
        // } else {
        //   Toast.error(data.msg);
        // }
      }, "json");
    } else {
      Toast.warning("请先选择菜单！");
    }
  }

  function each(node, tree, nodes) {
    var p = tree.get_parent(node);
    if (p.length > 1) {
      if (nodes && p && nodes.indexOf(p) < 0)
        nodes.push(p);
      each(p, tree, nodes);
    }
  }
</script>
<header class="header navbar bg-white shadow">
  <div class="btn-group tool-button">
    <a class="btn btn-primary navbar-btn" href="/private/api/basket/productAdd/<%=obj.id%>" data-toggle="modal" data-target="#dialogDetail"><i class="ti-plus"></i> 添加商品</a>
    <button class="btn btn-danger navbar-btn" onclick="delCheck()"><i class="ti-close"></i> 删除商品</button>
    <a class="btn btn-primary navbar-btn" href="/private/api/basket/index/<%=obj.appid||''%>" data-pjax><i class="ti-angle-left"></i> 返回</a>
    <div class="btn-group" style="padding-top: 16px;">商品池：<%=obj.name%></div>
  </div>

</header>
<div class=panel-body style="padding-top: 50px;">
  <div class="table-responsive no-border">
    <table class="table table-bordered table-striped mg-t datatable">
      <thead>
      <tr>
        <th>SKU</th>
        <th>商品名称</th>
        <th>规格</th>
        <th>商城价</th>
        <th>协议价</th>
        <th>上架状态</th>
    </table>
  </div>
</div>
<div id="dialogDelete" class="modal fade bs-modal-sm" tabindex="-2" role="dialog" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        <h4 class="modal-title">删除</h4>
      </div>
      <div class="modal-body">
        <div class="row">
          <div class="col-xs-12">
            删除后无法恢复，确定删除吗？ <br/>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">取 消</button>
        <button id="ok" type="button" class="btn btn-primary" data-loading-text="正在删除...">确 定</button>
      </div>
    </div>
  </div>
</div>
<div id="dialogDetail" class="modal fade bs-modal" tabindex="-3" role="dialog" aria-hidden="true">
  <div class="modal-dialog" style="min-width: 1000px;">
    <div class="modal-content" style="min-width: 1000px;">
    </div>
  </div>
</div>
<script language="JavaScript">
  var datatable;
  function initDatatable() {
    datatable = $('.datatable').DataTable({
      "dom": '<"toolbar">frtip',
      "searching": false,
      "processing": false,
      "serverSide": true,
      "select": true,
      "ordering": true,
      "language": {
        "url": "/plugins/datatables/cn.json"
      },
      "preDrawCallback": function () {
        sublime.showLoadingbar($(".main-content"));
      },
      "drawCallback": function () {
        sublime.closeLoadingbar($(".main-content"));
        $(".price").editable();
      },
      "ajax": {
        "url": "/private/api/basket/productData",
        "type": "post",
        "data": function (d) {
          d.basketid=<%=obj.id%>
        }
      },
      "order": [[0, "desc"]],
      "columns": [
        {"data": "sku", "bSortable": true},
        {"data": "sku", "bSortable": true},
        {"data": "sku", "bSortable": true},
        {"data": "sku", "bSortable": true},
        {"data": "price", "bSortable": true},
        {"data": "sku", "bSortable": true}
      ],
      "columnDefs": [
        {
          "render": function (data, type, row) {
            if(row.productid){
              return '<a href="/goods/'+row.productid.goodsid+'" style="color: #3367ac;" target="_blank">'+row.productid.name+'</a>';
            }
            return '';
          },
          "targets": 1
        },
        {
          "render": function (data, type, row) {
            if(row.productid){
              return row.productid.spec;
            }
            return '';
          },
          "targets": 2
        },
        {
          "render": function (data, type, row) {
            if(row.productid){
              return setPrice(row.productid.price);
            }
            return '';
          },
          "targets": 3
        },
        {
          "render": function (data, type, row) {
            return  '<a class="price" href="#" id="price_'+row.id+'" data-url="/private/api/basket/price" data-type="text" data-pk="'+row.id+'" data-title="填写协议价" class="editable editable-click" data-original-title="" title="" style="background-color: rgba(0, 0, 0, 0);">'+setPrice(data)+'</a>';
          },
          "targets": 4
        },
        {
          "render": function (data, type, row) {
            if(row.productid){
              if (!row.productid.disabled) {
                return '<i id="disable_' + row.id + '" class="fa fa-circle text-success ml5"></i>';
              } else {
                return '<i id="disable_' + row.id + '" class="fa fa-circle text-danger ml5"></i>';
              }
            }
            return '';
          },
          "targets": 5
        }
      ]
    });
    datatable.on('click', 'tr', function () {
      $(this).toggleClass('selected');
    });
    $("#searchBtn").on('click', function () {
      datatable.ajax.reload();
    });
  }
  function delCheck() {
    var chks = datatable.rows('.selected').data();
    if (chks.length > 0) {
      var ids = [];
      $.each(datatable.rows('.selected').data(), function (i, n) {
        ids.push(n.id);
      });
      var dialog = $("#dialogDelete");
      dialog.modal("show");
      dialog.find("#ok").unbind("click");
      dialog.find("#ok").bind("click", function (event) {
        var btn = $(this);
        btn.button("loading");
        $.post("/private/api/basket/productDelete", {ids: ids}, function (data) {
          if (data.code == 0) {
            datatable.ajax.reload(null,false);
          } else {
            Toast.error(data.msg);
          }
          btn.button("reset");
          dialog.modal("hide");
        }, "json");
      });
    } else {
      Toast.warning("请先选择要删除的项！");
    }
  }
  $(function () {
    initDatatable();
    $("#dialogDetail").on("hidden.bs.modal", function() {
      $(this).removeData("bs.modal");
    });
  });
</script>

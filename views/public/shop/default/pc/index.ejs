    <dl class="about_usm">
      <dt class="about_usl"><a href="/info/<%=aobj.id%>" target="_blank">
          <img src="<%=aobj.picurl||''%>" title="<%=centerChannel.name||''%>" alt="<%=centerChannel.name||''%>">
